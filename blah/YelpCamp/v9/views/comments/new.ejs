<% include ../partials/header %>
<div class="container">
        <h1 style="text-align: center;">Add New Comment <%= campground.name %></h1>
        <div style="width:30%; margin: 25px auto;">
            <!-- It is not responsive enough -->
            <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-large btn-block" type="submit" name="" value="Submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
</div>
